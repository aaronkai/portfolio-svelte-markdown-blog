#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/tailwindcss@2.2.4_72be89de93206f86f2d67dd5290ec14d/node_modules/tailwindcss/lib/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/tailwindcss@2.2.4_72be89de93206f86f2d67dd5290ec14d/node_modules/tailwindcss/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/tailwindcss@2.2.4_72be89de93206f86f2d67dd5290ec14d/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules:/home/aaron/sandbox/svelte/node_modules:/home/aaron/sandbox/node_modules:/home/aaron/node_modules:/home/node_modules:/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/tailwindcss/lib/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/tailwindcss/node_modules"
else
  export NODE_PATH="$NODE_PATH:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/tailwindcss@2.2.4_72be89de93206f86f2d67dd5290ec14d/node_modules/tailwindcss/lib/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/tailwindcss@2.2.4_72be89de93206f86f2d67dd5290ec14d/node_modules/tailwindcss/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/tailwindcss@2.2.4_72be89de93206f86f2d67dd5290ec14d/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/.pnpm/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules:/home/aaron/sandbox/svelte/node_modules:/home/aaron/sandbox/node_modules:/home/aaron/node_modules:/home/node_modules:/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/tailwindcss/lib/node_modules:/home/aaron/sandbox/svelte/svelte-markdown-blog/node_modules/tailwindcss/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../tailwindcss/lib/cli.js" "$@"
else
  exec node  "$basedir/../tailwindcss/lib/cli.js" "$@"
fi
